<!DOCTYPE html>
<html>

<head>
  <title>Moobi</title>
  <%- include("head") %>
</head>

<body>

  <%- include("navbar") %>

  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <% if (found) {  %>
        <h1>Now Playing</h1>
        <% } else {%>
        <h1>Search Results</h1>
        <% } %>
      </div>
      <div class="col-sm-12">
        <% if (!found) {  %>
        <p>No results found</p>
        <% } %>
        <% movies.forEach(movie => { %>
        <div class="col-md-3 col-sm-4 poster">
          <a href="/movie/<%= movie.id %>">
            <img src="<%= imageBase + movie.poster_path %>" alt="" crossorigin="anonymous">
          </a>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</body>

</html>